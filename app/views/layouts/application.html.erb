<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <div class="notification is-primary global-notification">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>

    <!-- nav bar -->
    <nav class="navbar is-black is-mobile is-marginless">
      <div class="navbar-brand">
          <div class="navbar-item">
              <a class="navbar-item" href="./index.html">
                  <img src="./padlock.svg" style="width: 2rem; height: 6rem;">
              </a>
              <h1 class="title has-text-white">
                  Members Only
              </h1> 
          </div>
          <a href="#" class="navbar-burger" id="burger">
              <span></span>
              <span></span>
              <span></span>
          </a>
      </div>
      <div class="navbar-menu" id="nav-links">
          <div class="navbar-end">
              <div class="buttons has-text-weight-bold navbar-item">
                  <a class="button is-dark">Login</a>
                  <a class="button is-warning">Sign up</a>
                </div>
          </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
