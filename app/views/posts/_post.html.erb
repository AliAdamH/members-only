<div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
            </figure>
        </div>

        <div class="media-content">
            <div class="content">
                <strong>Hello</strong><br />      
                <small>Hello</small><br />
                <p><%= post.body %></p>
            </div>
            <nav class="level">
                <div class="level-left is-mobile">
                    <%= link_to post, class: 'level-item' do %>
                        <span class="icon">
                            <i class="fa fa-link" aria-hidden="true"></i>
                        </span>
                    <% end %>

                    <%= link_to edit_post_path(post), class: 'level-item' do %>
                        <span class="icon">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </span>
                    <% end %>

                    <%= link_to post, method: :delete, data: { confirm: 'Wanna delete this tweet?' } do %>
                        <span class="icon">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </span>
                    <% end %>
                </div>
            </nav>
        </div>
    </article>
</div>