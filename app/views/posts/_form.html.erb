<article class="media box">
    <figure class="media-left">
        <p class="image is-64x64">
            <img class="is-rounded" src="https://bulma.io/images/placeholders/64x64.png" alt="">
        </p>
    </figure>
    <div class="media-content">
        <%= simple_form_for(@post) do |f|%>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :title, label: "Post Title: ", input_html: { class: "input" }, wrapper: false, 
              label_html: { class: 'label' }, placeholder: "Think of a title for your post" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :body, label: "Post something: ", input_html: { class: "textarea " }, wrapper: false, 
              label_html: { class: 'label' }, placeholder: "Write something Yo !" %>
            </div>
          </div>


          <div class="level">
              <div class="level-item is-justify-content-flex-end">
                <%= f.button :submit, class: "button is-warning has-text-weight-medium" %>
              </div>
          </div>
          <% end %>
    </div>
</article>